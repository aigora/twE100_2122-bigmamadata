+//MENU PARA UN AJEDREZ. EL MENU SERA PARA COMENZAR LA PARTIDA O CERRAR EL PROGRAMA SOLO ,PUES NO HAY MUCHAS MAS OPCIONES EN UN AJEDREZ DE DOS JUGADORES.
#include<stdio.h>


int main()
{

    printf("Â¿desea comenzar a jugar?\n Diga 'S' para continuar o 'N' para salir del programa\n");

    char inicio;




do
{
    scanf(" %c", &inicio);
    switch (inicio)
    {
    case 'S':
    case 's':
    
        break;
    case 'N':
    case 'n':
     printf(" que falta de respeto, adios ");
     exit(0);
        break;

    }

} while (inicio !='n' || inicio != 's');

// continuacion de programa

return 0;

}
